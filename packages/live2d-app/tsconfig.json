{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "../live2d-core/*.ts",
    "../live2d-core/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}